# JupyterHub Multi-User Configuration
# Copy this file to .env and fill in your values

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# VPS/Server IP or hostname
SERVER_HOST=your-server-ip

# SSH credentials for deployment
SSH_USER=root
SSH_PASSWORD=your-ssh-password
SSH_PORT=22

# ===========================================
# ADMIN CONFIGURATION
# ===========================================

# Admin username (default: admin)
ADMIN_USER=admin

# Admin password (will be set during deployment)
ADMIN_PASSWORD=your-secure-admin-password

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Main application port
APP_PORT=9999

# Base port for user JupyterLab instances
# Each user gets BASE_PORT + (uid - 1000)
JUPYTER_BASE_PORT=9800

# Domain for Cloudflare Tunnel (optional)
DOMAIN=your-domain.com

# ===========================================
# DOCKER SETTINGS (if using Docker)
# ===========================================

# Docker network name
DOCKER_NETWORK=jupyterhub-network

# Data persistence directory
DATA_DIR=/opt/jupyterhub/data
